version: '3'
services:
  # Serviço do MongoDB para o Graylog
  mongo:
    image: mongo:4.4
    volumes:
      - graylog-mongo-data:/data/db
    networks:
      - graylog-net

  # Serviço do Elasticsearch para o Graylog
  elasticsearch:
    image: docker.elastic.co/elasticsearch/elasticsearch:7.10.1
    environment:
      - cluster.name=graylog
      - node.name=graylog-elasticsearch
      - discovery.type=single-node
      - bootstrap.memory_lock=true
    ulimits:
      memlock:
        soft: -1
        hard: -1
    volumes:
      - graylog-es-data:/usr/share/elasticsearch/data
    networks:
      - graylog-net

  # Serviço do Graylog
  graylog:
    image: graylog/graylog:4.1
    environment:
      - GRAYLOG_PASSWORD_SECRET=Chaeyuwa0Quai0Meik8p
      - GRAYLOG_ROOT_PASSWORD_SHA2=a8836f1580ad300ae90a0ecd33a5afc5fe650db48fac6c258acd5e3e06367fb7
      - GRAYLOG_HTTP_EXTERNAL_URI=http://0.0.0.0:9000/
      - GRAYLOG_ELASTICSEARCH_HOSTS=http://elasticsearch:9200/
    volumes:
      - graylog-data:/usr/share/graylog/data
    depends_on:
      - mongo
      - elasticsearch
    ports:
      - "9000:9000"
      - "514:514/udp"
      - "1514:1514/udp"
    networks:
      - graylog-net

volumes:
  graylog-data:
  graylog-mongo-data:
  graylog-es-data:

networks:
  graylog-net:
